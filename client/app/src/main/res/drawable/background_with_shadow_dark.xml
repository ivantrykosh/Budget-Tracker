<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow on Right and Bottom -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@color/black" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Shape -->
    <item android:left="0dp" android:top="0dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <solid android:color="@color/light_black" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>